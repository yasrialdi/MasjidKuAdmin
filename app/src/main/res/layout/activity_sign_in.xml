<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".SignInActivity"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/signin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"/>

        <EditText
            android:id="@+id/signin_username"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:background="@drawable/username"
            android:ems="10"
            android:hint="Email"
            android:paddingLeft="10dp"
            android:layout_below="@id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"/>

        <EditText
            android:id="@+id/signin_password"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:background="@drawable/password"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:layout_below="@id/signin_username"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/signin_signin"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:background="@drawable/btnsignin"
            android:layout_below="@id/signin_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

        <Button
            android:id="@+id/signin_signup"
            android:layout_width="85dp"
            android:layout_height="15dp"
            android:background="@drawable/daftar"
            android:layout_below="@id/textView4"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum punya akun?"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_below="@id/signin_signin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="210dp"/>


    </RelativeLayout>




</ScrollView>